
{{#if notes}}
	<div class="row">
		{{#each notes}}
			<div class="card col-md-4 mx-auto text-center pt-4 d-flex flex-column justify-content-between">
				<h3 class="d-flex justify-content-between align-items-center">
					{{title}}
					<a href="/note/update/{{_id}}"><i class="bi bi-pen-fill text-success"></i></a>
				</h3>
				<hr class="mt-3">
				<p>{{description}}</p>
				<form action='/note/delete/{{_id}}?_method=DELETE' method='POST'>
					<input type="hidden" name="_method" value='DELETE'>
					<button type="submit" class="btn btn-danger btn-block w-100">
						<i class="bi bi-trash-fill h4"></i>
					</button>
				</form>
			</div>
		{{/each}}
	</div>
{{else}}
	<div class="card mx-auto">
		<div class="card-body text-center">
			<p class="lead">No tienes notas <a href="/note/new">Crear Nota</a></p>
		</div>
	</div>
{{/if}}
